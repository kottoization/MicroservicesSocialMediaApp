@model IEnumerable<FrontEndMVC.Models.PostViewModel>

<h1 class="mb-4">Posts</h1>

@if (Model.Any())
{
    <div class="row">
        @foreach (var post in Model.OrderByDescending(p => p.CreatedAt)) 
        {
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@post.Content</h5>
                        <p class="card-text">
                            <small class="text-muted">Created by: @post.UserName on @post.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</small>
                        </p>

                        @if (post.CommentsCount > 0)
                        {
                            <a asp-action="Comments" asp-route-postId="@post.Id" class="btn btn-primary">View Comments</a>
                        }
                        else
                        {
                            <p class="text-muted">No comments yet.</p>
                        }

                        <a asp-action="AddComment" asp-route-postId="@post.Id" class="btn btn-secondary mt-2">Add Comment</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No posts available.</p>
}
