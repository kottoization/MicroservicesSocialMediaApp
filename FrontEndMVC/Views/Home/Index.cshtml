@model IEnumerable<FrontEndMVC.Models.PostViewModel>

<h1 class="mb-4">Posts</h1>

@if (Model.Any())
{
    <div class="row">
        @foreach (var post in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@post.Content</h5>
                        <p class="card-text">
                            <small class="text-muted">Created by: @post.UserName on @post.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</small>
                        </p>
                        <a asp-controller="Post" asp-action="Comments" asp-route-postId="@post.Id" class="btn btn-primary">View Comments</a>
                        
                        <a asp-controller="Post" asp-action="CreateCommentForm" asp-route-postId="@post.Id" class="btn btn-secondary">Add Comment</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No posts available.</p>
}
